use strict;

use Test::More;
use Chess::Position;

my $pos = Chess::Position->new;

ok $pos, 'created';

my $got = $pos->toFEN;
my $wanted = 'rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR w KQkq - 0 1';

is $got, $wanted, 'FEN initial position';

done_testing;
